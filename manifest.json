{
  "name": "Simple Link Clipper",
  "version": "0.2.1",
  "manifest_version": 3,
  "description": "Clip url in the selected format.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting",
    "commands"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "EventName": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "Copy to clipboard trigger."
    }
  },
  "action": {
    "default_icon": "assets/img/icon/19.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "assets/img/icon/128.png"
  }
}
